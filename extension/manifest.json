{
  "manifest_version": 3,
  "name": "Screen Recorder Pro",
  "version": "1.0",
  "description": "Record your screen and edit the video instantly.",
  "permissions": [
    "tabs",
    "unlimitedStorage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Start Recording"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["setup.html", "editor.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
